<import src="../template/template.wxml"/>

<cu-custom bgColor="bg-gradual-orange">
    <view slot="content">创建模板</view>
</cu-custom>

<view wx:for="{{dataList}}" wx:key>
    <template wx:if="{{item.type=='TYPE_INPUT_TEXT'}}" is="input-box" data="{{...item}}"/>
    <template wx:if="{{item.type=='TYPE_SELECT'}}" is="switch-box"/>
    <template wx:if="{{item==3}}" is="time-box"/>
    <template wx:if="{{item==4}}" is="date-box"/>
    <template wx:if="{{item==5}}" is="pic-upload-box"/>
</view>


<button class="cu-btn block line-orange lg upload-btn" bindtap="showModal" data-target="DrawerModalL">
    <text class="cuIcon-upload"></text>
    选择模板
</button>


<view class="cu-modal drawer-modal justify-start {{modalName=='DrawerModalL'?'show':''}}" bindtap="hideModal">
    <view class="cu-dialog basis-lg" catchtap style="top:{{CustomBar}}px;height:calc(100vh - {{CustomBar}}px)">
        <view class="cu-list menu text-left">
            <view class="cu-item arrow" wx:for="{{viewList}}" wx:key>
                <view class="content" bindtap="selectView" data-view-type="{{item.type}}">
                    <view>{{item.name}}</view>
                </view>
            </view>
        </view>
    </view>
</view>
