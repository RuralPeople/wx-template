<!--输入框-->
<template name="input-box">
    <view class="cu-form-group">
        <view class="title">输入标题</view>
        <input placeholder="输入提示"></input>
    </view>
</template>

<!--滑块开关选择-->
<template name="switch-box">
    <view class="cu-form-group">
        <view class="title">开关选择</view>
        <switch></switch>
    </view>
</template>

<!--时间选择-->
<template name="time-box">
    <view class="cu-form-group">
        <view class="title">时间选择</view>
        <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="TimeChange">
            <view class="picker">
                {{time}}
            </view>
        </picker>
    </view>
</template>

<!--日期选择-->
<template name="date-box">
    <view class="cu-form-group">
        <view class="title">日期选择</view>
        <picker mode="date" value="{{date}}" start="2015-09-01" end="2020-09-01" bindchange="DateChange">
            <view class="picker">
                {{date}}
            </view>
        </picker>
    </view>
</template>

<!--图片上传-->
<template name="pic-upload-box">
    <view class="cu-bar bg-white margin-top">
        <view class="action">
            图片上传
        </view>
        <view class="action">
            {{imgList.length}}/4
        </view>
    </view>
    <view class="cu-form-group">
        <view class="grid col-4 grid-square flex-sub">
            <view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage"
                  data-url="{{imgList[index]}}">
                <image src='{{imgList[index]}}' mode='aspectFill'></image>
                <view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
                    <text class="cuIcon-close"></text>
                </view>
            </view>
            <view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<4}}">
                <text class="cuIcon-cameraadd"></text>
            </view>
        </view>
    </view>
</template>

